<h1>Real Time Products</h1>
<form id="cargaProducts">
  <div>
    <label for="title">Title:</label>
    <input id="inputTitle" name="title" type="text">
  </div>
  <div>
    <label for="description">Description:</label>
    <input id="inputDescription" name="description" type="text">
  </div>
  <div>
    <label for="code">Code:</label>
    <input id="inputCode" name="code" type="text">
  </div>
  <div>
    <label for="price">Price:</label>
    <input id="inputPrice" name="price" type="number">
  </div>
  <div>
    <label for="stock">Stock:</label>
    <input id="inputStock" name="stock" type="number">
  </div>
  <div>
    <label for="category">Category:</label>
    <input id="inputCategory" name="category" type="text">
  </div>
  <div>
    <label for="thumbnails">Thumbnails:</label>
    <input id="inputThumbnails" name="thumbnails" type="text">
  </div>
  <div>
    <label for="id">ID:</label>
    <input id="inputId" name="id" type="text">
  </div>
  <div>
    <label for="status">Status:</label>
    <input id="inputStatus" name="status" type="text">
  </div>
  <div>
    <button type="submit" id="btnEnviar">Enviar</button>
  </div>
</form>


 <div class="container mt-5">
    <h2>{{Head}}</h2>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/css/realTimeProducts.css">
    {{#if hayProductos}}
      <h4>Products:</h4>
      <div class="container text-center mb-5">
        <div class="row row-gap-5">
          {{#each productos}}
            <div class="col-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text">{{this.description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Item {{this.code}}</li>
                  <li class="list-group-item">Price: ${{this.price}}</li>
                  <li class="list-group-item">Category: {{this.category}}</li>
                  <li class="list-group-item">Stock: {{this.stock}}</li>
                  <li class="list-group-item"></li>
                </ul>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{else}}
      <p class="">the product gallery is empty</p>
    {{/if}}

  </div>
  <footer>
    <p>Todos los derechos reservados. &copy; 2023</p>
  </footer>
